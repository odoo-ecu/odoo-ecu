<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_waybill_inherit_form" model="ir.ui.view">
        <field name="name">view_move_waybill_inherit_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                        <!-- Send (only invoices) -->
                        <button name="action_create_waybill"
                                type="object"
                                string="Create &amp; Waybill"
                                attrs="{'invisible':['|', '|', ('state', '!=', 'posted'), ('is_move_sent', '=', True), ('move_type', '!=', 'out_invoice')]}"
                                data-hotkey="r"/>

            </xpath>
        </field>
    </record>

</odoo>
