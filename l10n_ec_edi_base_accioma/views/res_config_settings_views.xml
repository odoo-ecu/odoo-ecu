<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="res_config_settings_l10n_ec_edi_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside" >
          <div class="app_settings_block" string="Electronic Document Interchange Ecuador" data-string="EDI Ecuador" data-key="l10n_ec_edi_base_accioma" groups="account.group_account_manager">
              <div class="row mt16 o_settings_container" name="l10n_ec_edi_settings_container" groups="account.group_account_manager">
                  <h2>EDI Ecuador</h2>
                  <div class="col-12 col-lg-16 o_setting_box"></div>
                  <div class="o_setting_left_pane"></div>
                  <div class="o_setting_right_pane">
                      <span class="o_form_label">Environment</span>
                      <span class="fa fa-lg fa-building-o"></span>
                      <div class="text-muted">SRI environment for documents authorization</div>
                        <div class="content-group">
                            <div class="row mt16">
                                <!-- <label for="l10n_ec_edi_environment_type" string="Environment" class="col-lg-3 o_light_label"/> -->
                                <field name="l10n_ec_edi_environment_type" widget="selection"/>
                            </div>
                        </div>
                  </div>

</div>

          </div>
      </xpath>

    </field>
</record>

</odoo>
